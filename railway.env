# Railway deployment configuration for Audio2Text

# Node.js version
NODE_VERSION=18

# Next.js configuration
NEXT_TELEMETRY_DISABLED=1

# Build configuration
NPM_CONFIG_CACHE=/tmp/.npm
NPM_CONFIG_PREFER_OFFLINE=true

# Production environment
NODE_ENV=production

